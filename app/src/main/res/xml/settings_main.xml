<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/keyword_default"
        android:inputType="text"
        android:key="@string/keyword"
        android:selectAllOnFocus="true"
        android:title="@string/keyword_label" />

    <ListPreference
        android:defaultValue="@string/order_by_default"
        android:entries="@array/order_by_labels"
        android:entryValues="@array/order_by_values"
        android:key="@string/order_by"
        android:title="@string/order_by_label" />


</PreferenceScreen>